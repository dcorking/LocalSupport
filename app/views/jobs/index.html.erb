<% @jobs.each do |job| %>
  <tr>
    <td><%= job.title %></td>
    <td><%= job.description %></td>
    <td><%= job.organization %></td>
    <td><%= link_to 'Show', organization_job_path(@organization, job) %></td>
    <td><%= link_to 'Edit', edit_organization_job_path(@organization, job) %></td>
    <td><%= link_to 'Destroy', organization_job_path(@organization, job), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

